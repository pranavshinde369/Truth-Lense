{
  "name": "TruthLens - Review & Safety Analyzer",
  "description": "Analyze e-commerce product pages to detect fake reviews, summarize pros/cons, and flag potential phishing risks.",
  "version": "0.1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "TruthLens",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*",
    "https://www.amazon.com/*"
  ]
}
